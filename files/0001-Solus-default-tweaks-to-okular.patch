 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/conf/okular.kcfg b/conf/okular.kcfg
index 482ca34..0dc0ffa 100644
--- a/conf/okular.kcfg
+++ b/conf/okular.kcfg
@@ -171,7 +171,7 @@
  </group>
  <group name="General" >
   <entry key="ShellOpenFileInTabs" type="Bool" >
